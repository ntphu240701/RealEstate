<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Title Page-->
    <title>@ViewBag.title</title>

    <link rel="icon" href="./img/logo.jpg" type="image/x-icon">
    <!-- Fontfaces CSS-->
    <link href="~/css_admin/font-face.css" rel="stylesheet" media="all">
    <link href="~/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <link href="~/vendor/font-awesome-5/css/fontawesome-all.min.css" rel="stylesheet" media="all">
    <link href="~/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link href="~/vendor/datatables.net-dt/css/jquery.dataTables.min.css" rel="stylesheet">
    <link href="~/vendor/datatables.net-dt/css/dataTables.material.min.css" rel="stylesheet" />

    <!-- Bootstrap CSS-->
    <link href="~/vendor/bootstrap-4.1/bootstrap.min.css" rel="stylesheet" media="all">
    <link href="~/vendor/datatables.material.min.css" rel="stylesheet" />
    <link href="~/vendor/datatables.net-dt/css/material-components-web.min.css rel="stylesheet" />
    <!-- Vendor CSS-->
    <link href="~/vendor/animsition/animsition.min.css" rel="stylesheet" media="all">
    <link href="~/vendor/bootstrap-progressbar/bootstrap-progressbar-3.3.4.min.css" rel="stylesheet" media="all">
    <link href="~/vendor/wow/animate.css" rel="stylesheet" media="all">
    <link href="~/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" media="all">
    <link href="~/vendor/slick/slick.css" rel="stylesheet" media="all">
    <link href="~/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/vendor/perfect-scrollbar/perfect-scrollbar.css" rel="stylesheet" media="all">
    <link href="~/css_admin/swiper-bundle.min.css" rel="stylesheet" />
    <link href="~/css_admin/multi-tag.css" rel="stylesheet" media="all" />
    <!-- Main CSS-->
    <link href="~/css_admin/theme.css?rnd=132" rel="stylesheet" media="all" />
</head>
<body class="animsition">
    <div class="page-wrapper">
        <!-- HEADER MOBILE-->
        <header class="header-mobile d-block d-lg-none">
            <div class="header-mobile__bar">
                <div class="container-fluid">
                    <div class="header-mobile-inner">
                        <a asp-area="" asp-controller="Admin" asp-action="index" class="logo">
                            <img src="~/img/logo.jpg" alt="CoolAdmin" />
                        </a>
                        <button class="hamburger hamburger--slider" type="button">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
            <nav class="navbar-mobile">
                <div class="container-fluid">
                    <ul class="navbar-mobile__list list-unstyled">
                        <li class="has-sub">
                            <a asp-area="" asp-controller="Admin" asp-action="index" class="js-arrow">
                                <i class="fas fa-tachometer-alt"></i>Dashboard
                            </a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Admin" asp-action="Property">
                                <i class="fa fa-building"></i>Property
                            </a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Admin" asp-action="Agent">
                                <i class="fas fa-users"></i>Users
                            </a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Admin" asp-action="New">
                                <i class="fas fa-newspaper"></i>News
                            </a>
                        </li>
                        <li class="has-sub">
                            <a class="js-arrow" href="#">
                                <i class="fas fa-copy"></i>Pages
                            </a>
                            <ul class="navbar-mobile-sub__list list-unstyled js-sub-list">
                                <li>
                                    <a a asp-area="" asp-controller="Admin" asp-action="login">Login</a>
                                </li>
                                <li>
                                    <a a asp-area="" asp-controller="Admin" asp-action="Forgetpass">Forget Password</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- END HEADER MOBILE-->
        <!-- MENU SIDEBAR-->
        <aside class="menu-sidebar d-none d-lg-block">
            <div class="logo">
                <a asp-area="" asp-controller="Admin" asp-action="index">
                    <img src="~/img/logo.jpg" alt="Cool Admin" style="width:45%; margin-left:25%; display:block; mix-blend-mode: multiply" />
                </a>
            </div>
            <div class="menu-sidebar__content js-scrollbar1">
                <nav class="navbar-sidebar">
                    <ul class="list-unstyled navbar__list">
                        <li class="has-sub @Html.Raw(ViewBag.active== 1 ? "active":"")">
                            <a asp-area="" asp-controller="Admin" asp-action="index" class="js-arrow">
                                <i class="fas fa-tachometer-alt"></i>Dashboard
                            </a>
                        </li>
                        <li class="@Html.Raw(ViewBag.active== 2 ? "active":"")">
                            <a asp-area="" asp-controller="Admin" asp-action="Property">
                                <i class="fas fa-chart-bar"></i>Property
                            </a>
                        </li>
                        <li class="@Html.Raw(ViewBag.active== 3 ? "active":"")">
                            <a asp-area="" asp-controller="Admin" asp-action="Agent">
                                <i class="fas fa-users"></i>Agents
                            </a>
                        </li>
                        <li class="@Html.Raw(ViewBag.active== 4 ? "active":"")">
                            <a asp-area="" asp-controller="Admin" asp-action="New">
                                <i class="fas fa-newspaper"></i>News
                            </a>
                        </li>
                        <li class="has-sub">
                            <a class="js-arrow" href="#">
                                <i class="fas fa-copy"></i>Pages
                            </a>
                            <ul class="navbar-mobile-sub__list list-unstyled js-sub-list">
                                <li>
                                    <a a asp-area="" asp-controller="Admin" asp-action="login">Login</a>
                                </li>
                                <li>
                                    <a a asp-area="" asp-controller="Admin" asp-action="login">Logout</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <!-- HEADER DESKTOP-->
        <header class="header-desktop">
            <div class="section__content section__content--p30">
                <div class="container-fluid">
                    <div class="header-wrap float-right">
                        <div class="account-wrap">
                            <div class="header-button">
                                <div class="account-item clearfix js-item-menu">
                                    @if (Context.Session.GetString("UserName") != null && Context.Session.GetString("Email") != null)
                                    {
                                        <div class="image">
                                            <img src="~/images/icon/avatar-06.jpg" alt="John Doe" />
                                        </div>
                                        <div class="content">
                                            <a asp-area="" asp-controller="Admin" asp-action="card" class="js-acc-btn">Hi, @Context.Session.GetString("UserName")</a>
                                        </div>
                                        <div class="account-dropdown js-dropdown">
                                            <div class="info clearfix">
                                                <div class="image">
                                                    <a asp-area="" asp-controller="Admin" asp-action="card">
                                                        <img src="~/images/icon/avatar-06.jpg" alt="John Doe" />
                                                    </a>
                                                </div>
                                                <div class="content">
                                                    <h5 class="name">
                                                        <a asp-area="" asp-controller="Admin" asp-action="card">@Context.Session.GetString("UserName")</a>
                                                    </h5>
                                                    <span class="email">@Context.Session.GetString("Email")</span>
                                                </div>
                                            </div>
                                            <div class="account-dropdown__body">
                                                <div class="account-dropdown__item">
                                                    <a asp-area="">
                                                        <i class="zmdi zmdi-account"></i>Account
                                                    </a>
                                                </div>
                                                <div class="account-dropdown__item">
                                                    <a asp-area="" asp-controller="Admin" asp-action="Login">
                                                        <i class="zmdi zmdi-power"></i>Logout
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
    </div>
    @RenderBody()

    <!-- Jquery JS-->
    <script src="~/vendor/jquery-3.2.1.min.js"></script>
    <script src="~/vendor/jquery-3.5.1.min.js"></script>
    <!-- Bootstrap JS-->
    <script src="~/vendor/bootstrap-4.1/popper.min.js"></script>
    <script src="~/vendor/bootstrap-4.1/bootstrap.min.js"></script>
    <!-- Vendor JS       -->
    <script src="~/vendor/slick/slick.min.js">
    </script>
    <script src="~/vendor/wow/wow.min.js"></script>
    <script src="~/vendor/animsition/animsition.min.js"></script>
    <script src="~/vendor/bootstrap-progressbar/bootstrap-progressbar.min.js">
    </script>
    <script src="~/vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="~/vendor/counter-up/jquery.counterup.min.js">
    </script>
    <script src="~/vendor/circle-progress/circle-progress.min.js"></script>
    <script src="~/vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/vendor/chartjs/Chart.bundle.min.js"></script>
    <script src="~/vendor/select2/select2.min.js">
    </script>
    <!-- Swiper JS       -->
    <script src="~/js/swiper-bundle.min.js"></script>
    <script src="~/js_admin/swiper-bundle.min.js"></script>
    <!-- DataTable JS       -->
    <script src="~/vendor/datatables.net-dt/js/jquery.dataTables.js"></script>
    <script src="~/vendor/datatables.net-dt/js/jquery.dataTables.min.js"></script>
    <!-- Multi-Select-Tag JS   -->
    <script src="~/js_admin/multi-tag.js"></script>
    <!-- Main JS-->
    <script src="~/js_admin/main_admin.js"></script>
    <script src="~/js_admin/swiper.js"></script>
    <script>
        $(document).ready(function () {
            $('#table-page').DataTable({
                responsive: true,
                pageLength: 5,
                lengthMenu: [[5, 10, 20], [5, 10, 20]],
                autoWidth: false,
                columnDefs: [
                    {
                        targets: ['_all'],
                    },
                ],
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            $('#table-property').DataTable({
                responsive: true,
                pageLength: 5,
                lengthMenu: [[5, 10, 20], [5, 10, 20]],
                autoWidth: false,
                columnDefs: [
                    {
                        targets: ['_all'],
                    },
                ],
                fixedColumns: true,
            });
        });
    </script>
    <script>
        new MultiSelectTag('category')
    </script>
</body>
</html>