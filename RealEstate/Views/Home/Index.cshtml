        </div>

        <div class="row">
            <tbody>
                @foreach (var obj in Model.MySeller)
                {
                    <div class="col-md-4">
                        <div class="card-box-d">
                            <div class="card-img-d">
                                <img src="~/img/@obj.Image" alt="" class="img-d img-fluid">
                            </div>
                            <div class="card-overlay card-overlay-hover">
                                <div class="card-header-d">
                                    <div class="card-title-d align-self-center">
                                        <h3 class="title-d">
                                            <a asp-area="" asp-controller="Home" asp-action="Agent" asp-route-id="@obj.Id" class="link-two">
                                                @obj.Name
                                            </a>
                                        </h3>
                                    </div>
                                </div>
                                <div class="card-body-d">
                                    <p class="content-d color-text-a">
