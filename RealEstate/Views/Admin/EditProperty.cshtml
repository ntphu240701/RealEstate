@model RealEstate.Models.Property

@{
    Layout = "~/Views/shared/_layout_admin.cshtml";
    ViewBag.title = "EditProperty";
    ViewBag.active = 2;
}
<!-- PAGE CONTAINER-->
<div class="page-container">
    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row m-t-25">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="page-titles">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Admin" asp-action="Property">Property</a></li>
                                        <li class="breadcrumb-item active">
                                            <a asp-area="" asp-controller="Admin" asp-action="EditProperty">Edit Property</a>
                                        </li>
                                    </ol>
                                </div>
                            </div>
                            <div class="card-body card-block">
                                <form action="" method="post" enctype="multipart/form-data"
                                      class="form-horizontal">
                                    <div class="form-group">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <label class=" form-label">Current New ID :</label>
                                        <input type="text" asp-for="Id" />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Image" class="control-label">Current Image:</label>
                                        <span asp-validation-for="Image" class="text-danger"></span>
                                        <img src="~/img/@Model.Image" title="" alt="" style="border-radius: 3%; width : 20%;margin-bottom : 15px; display:block">
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Name" class="control-label">Change Title:</label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Price" class="control-label">Change the Price:</label>
                                        <input asp-for="Price" class="form-control" />
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="CategoryId" class="control-label"></label>
                                        <input asp-for="CategoryId" class="form-control" placeholder="2-Project 3-Buy 4-Rent"></input>
                                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="LocationId" class="control-label"></label>
                                        <textarea asp-for="LocationId" class="form-control" asp-items="ViewBag.LocationId" placeholder="1-Hà Nội
2-Đà Nẵng
3-Hồ Chí Minh
4-Cần Thơ
5-Ba Đình
6-Hoàn Kiếm
7-Sơn Trà
8-Ngũ Hành Sơn
9-Quận 1
10-Quận 2
11-Ninh Kiều
12-Cái Răng" rows="12"></textarea>
                                        <span asp-validation-for="LocationId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ChuDauTuId" class="control-label"></label>
                                        <input asp-for="ChuDauTuId" class="form-control" asp-items="ViewBag.ChuDauTuId" placeholder="1-NovaLand 2-Vin Group"></input>
                                        <span asp-validation-for="ChuDauTuId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Image" class="control-label">Change Image:</label>
                                        <input type="file" asp-for="ImageUpload" class="form-control" />
                                        <span asp-validation-for="Image" class="text-danger"></span>
                                    </div>
                                    <hr />
                                    <div class="d-flex justify-content-between">
                                        <div class="form-group">
                                            <button class="btn btn-primary">
                                                <a asp-area="" asp-controller="Admin" asp-action="Property" style="color:white">Back to List</a>
                                            </button>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" value="Update" class="au-btn au-btn-icon au-btn--green au-btn--small" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="copyright">
                                    <p>
                                        Copyright © 2023. All rights reserved. Team <a asp-area="" asp-controller="Admin" asp-action="index">LPH</a> with love
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

