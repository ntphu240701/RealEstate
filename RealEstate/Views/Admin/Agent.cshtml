@model List<RealEstate.Models.Seller>

@{
    Layout = "~/Views/shared/_layout_admin.cshtml";
    ViewBag.title = "Agents";
    ViewBag.active = 3;
}
<div class="page-wrapper">
    <!-- PAGE CONTAINER-->
    <div class="page-container">
        <!-- MAIN COTENT-->
        <div class="main-content">
            <div class="section__content section__content--p30">
                <div class="container-fluid">
                    <section class="content">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card" style="padding-bottom: 30px;">
                                    <div class="card-header" style="margin-bottom: 2%; min-height: 60px;">
                                        <strong class="card-title mb-3">Agents List</strong>
                                    </div>
                                    <table class="mdl-data-table" id="table-page" style="width:95%">
                                        <thead>
                                            <tr>
                                                <td>Image</td>
                                                <td>Name</td>
                                                <td>Phone</td>
                                                <td>Address</td>
                                                <td>Role</td>
                                                <td></td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var obj in Model)
                                            {
                                                string imgURL = @obj.Images.ToList()[0].Image1;
                                                <tr>
                                                    <td style="width: 12%">
                                                        <ul class="list-inline">
                                                            <li class="list-inline-item">
                                                                <img alt="User Image" class="table-avatar"
                                                                     src="~/img/@imgURL" style="border-radius: 3%; width: 100%">
                                                            </li>
                                                        </ul>
                                                    </td>
                                                    <td style="width: 20%">
                                                        <div class="table-data__info">
                                                            <h6>@obj.Name</h6>
                                                            <span>
                                                                <a asp-area="" asp-controller="Admin" asp-action="UserAdmin">@obj.Email</a>
                                                            </span>
                                                        </div>
                                                    </td>
                                                    <td style="width: 20%">
                                                        @obj.Phone
                                                    </td>
                                                    <td>
                                                        @obj.Address
                                                    </td>
                                                    <td>
                                                        <div class="rs-select2--trans rs-select2--sm">
                                                            <select class="js-select2" name="property">
                                                                <option>Full Control</option>
                                                                <option value="">Post</option>
                                                                <option value="">Watch</option>
                                                            </select>
                                                            <div class="dropDownSelect2"></div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="table-data-feature">
                                                            <button class="item" data-toggle="tooltip"
                                                                    data-placement="top" title="Detail">
                                                                <a asp-area="" asp-controller="Admin" asp-action="AgentDetail" asp-route-id="@obj.Id">
                                                                    <i class="zmdi zmdi-folder"></i>
                                                                </a>
                                                            </button>
                                                            <button class="item" data-toggle="tooltip"
                                                                    data-placement="top" title="Edit">
                                                                <a asp-area="" asp-controller="Admin" asp-action="EditAgent" asp-route-id="@obj.Id">
                                                                    <i class="zmdi zmdi-edit">
                                                                    </i>
                                                                </a>
                                                            </button>
                                                            <button class="item" data-toggle="tooltip"
                                                                    data-placement="top" title="Delete">
                                                                <i class="zmdi zmdi-delete"></i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <!-- END USER DATA-->
                        </div>
                </div>
            </div>
            <!-- END PAGE CONTAINER-->
            <!-- Footer  -->
            <div class="row">
                <div class="col-md-12">
                    <div class="copyright">
                        <p>
                            Copyright Â© 2023. All rights reserved. Team <a asp-area="" asp-controller="Admin" asp-action="index">LPH</a> with love
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

