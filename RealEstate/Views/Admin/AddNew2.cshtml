@model RealEstate.Models.News

@{
    Layout = "~/Views/shared/_layout_admin.cshtml";
    ViewBag.title = "AddNew2";
    ViewBag.active = 4;
}
<!-- PAGE CONTAINER-->
<div class="page-container">
    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                    </div>
                </div>
                <div class="row m-t-25">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="page-titles">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Admin" asp-action="New">New</a></li>
                                        <li class="breadcrumb-item active">
                                            <a asp-area="" asp-controller="Admin" asp-action="AddNew">Add New</a>
                                        </li>
                                    </ol>
                                </div>
                            </div>
                            <div class="card-body card-block">
                                <form asp-action="AddNew2" asp-action="Create" class="form-horizontal" enctype="multipart/form-data">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label asp-for="Title" class="control-label"></label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input asp-for="Title" class="form-control" />
                                        </div>
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label asp-for="Contents" class="control-label"></label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <textarea asp-for="Contents" class="form-control" rows="5"></textarea>
                                        </div>
                                        <span asp-validation-for="Contents" class="text-danger"></span>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label asp-for="Date" class="control-label"></label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input asp-for="Date" class="form-control" />
                                        </div>
                                        <span asp-validation-for="Date" class="text-danger"></span>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label asp-for="ImageUpload" class="control-label"></label>
                                        </div>
                                        <div class="col-12 col-md-9 custom-file">
                                            <input type="file" asp-for="ImageUpload" class="custom-file-input" id="customFile"
                                                   onchange="document.getElementById('ImagePrev').src = window.URL.createObjectURL(this.files[0])" />
                                            <label class="custom-file-label" for="customFile">Choose File</label>
                                            <span asp-validation-for="Image" class="text-danger"></span>
                                        </div>
                                        <img id="ImagePrev" src="~/images/noimage.png" alt="Logo Image" style="border: 1px; margin-top:50px; margin-left:50%; width: 200px ; height: 170px" />
                                    </div>
                                    <hr />
                                    <div class="d-flex justify-content-between">
                                        <div class="form-group">
                                            <button class="btn btn-primary">
                                                <a asp-area="" asp-controller="Admin" asp-action="New" style="color:white">Back to List</a>
                                            </button>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" value="Create" class="btn btn-success" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="copyright">
                                    Copyright © 2023. All rights reserved. Team <a asp-area="" asp-controller="Admin" asp-action="index">LPH</a> with love
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script type="text/javascript">
            $("custom-file-input").on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
            });
        </script>

